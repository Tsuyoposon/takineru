<p id="notice"><%= notice %></p>

<h1>Local Infos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Image</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @local_infos.each do |local_info| %>
      <tr>
        <td><%= local_info.name %></td>
        <td><%= local_info.body %></td>
        <td><%= local_info.image %></td>
        <td><%= local_info.latitude %></td>
        <td><%= local_info.longitude %></td>
        <td><%= link_to 'Show', local_info %></td>
        <td><%= link_to 'Edit', edit_local_info_path(local_info) %></td>
        <td><%= link_to 'Destroy', local_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Local Info', new_local_info_path %>
